<nav>
    <center><h1 class="third">myFitnessTracker</h1></center>
    <center><h2 class="goals">Goals</h2></center>

    <center><h3 class="navLinks">
      <%= link_to "Users", users_path %> | <%= link_to "Goals", goals_path %></h3></center>

  </ul
  </nav>

<p id="notice"><%= notice %></p>

<%= link_to 'New Goal', new_goal_path %>


<h1>Goals</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
    <p>User: <%= goal.user_id %>
    <p>Excercise: <%= goal.exercise_name %>
    <p>Length/Reps: <%= goal.length %>
    <p>Sets: <%= goal.sets %>
      <tr>
        <td><%= link_to 'Show', goal %></td>
        <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
        <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
